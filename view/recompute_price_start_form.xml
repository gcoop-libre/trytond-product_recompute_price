<form string="Recompute List Price" col="4">
    <image name="tryton-dialog-information" xexpand="0" xfill="0"/>
    <label string="Recompute the price for the selected product?"
        id="advice" yalign="0.0" xalign="0.0" xexpand="1" colspan="3"/>
    <label name="method"/>
    <field name="method" widget="selection" colspan="3"/>
    <label name="percentage"/>
    <group col="2" id="percentage">
        <field name="percentage" factor="100" xexpand="0" xfill="0"/>
        <label name="percentage" string="%" xalign="0.0" xexpand="1" xfill="1"/>
    </group>
    <newline/>
    <label name="list_price"/>
    <field name="list_price"/>
    <newline/>
</form>
